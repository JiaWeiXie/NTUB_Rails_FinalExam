<div class="row">
        <div class="col-sm-12">
            <h2 class="text-center mg-md">
                <%= title %>
            </h2>
            <p class="text-center sub-heading">
                Just a sample of what we do.
            </p>
        </div>
    </div>
    <%= galleries.each_slice 4 do |a, b, c, d| %>
    <div class="row voffset">
        <% if a %>
            <div class="col-sm-3">
                <!-- <a href="#" data-lightbox="<%= a.photo.url %>" data-caption="<%= a.description %>" data-gallery-id="gallery-1"><img src="<%= a.photo.medium.url %>" class="img-responsive" /></a> -->
                <%= link_to  (image_tag a.photo.medium.url, class: "img-responsive" ), "#", "data-lightbox": a.photo.url, "data-caption": a.description, "data-gallery-id": "gallery-1" %>
                <div class="text-center">
                    <%= link_to a.title, current_user == a.user ? edit_user_gallery_path(id: a.id, user_id: a.user.id) : user_gallery_path(id: a.id, user_id: a.user.id), class:"btn btn-block btn-sq btn-d" %>
                </div>
            </div>
        <% else %>
            <div class="col-sm-3">
            <%= link_to  (image_tag "placeholder-image-sq.png", class: "img-responsive"), new_user_gallery_path(:user) %>
            <div class="text-center">
                <%= link_to "New photo", new_user_gallery_path(:user), class:"btn btn-block btn-sq btn-d" %>
            </div>
            </div>
        <% end %>
        <% if b %>
            <div class="col-sm-3">
                <a href="#" data-lightbox="<%= b.photo.url %>" data-caption="<%= b.description %>" data-gallery-id="gallery-1"><img src="<%= b.photo.medium.url %>" class="img-responsive" /></a>
                <div class="text-center">
                    <%= link_to b.title, current_user == b.user ? edit_user_gallery_path(id: b.id, user_id: b.user.id) : user_gallery_path(id: b.id, user_id: b.user.id), class:"btn btn-block btn-sq btn-d" %>
                </div>
            </div>
        <% elsif a %>
            <div class="col-sm-3">
            <%= link_to  (image_tag "placeholder-image-sq.png", class: "img-responsive"), new_user_gallery_path(:user) %>
            <div class="text-center">
                <%= link_to "New photo", new_user_gallery_path(:user), class:"btn btn-block btn-sq btn-d" %>
            </div>
            </div>
        <% end %>
        <% if c %>
            <div class="col-sm-3">
                <a href="#" data-lightbox="<%= c.photo.url %>" data-caption="<%= c.description %>" data-gallery-id="gallery-1"><img src="<%= c.photo.medium.url %>" class="img-responsive" /></a>
                <div class="text-center">
                    <%= link_to c.title, current_user == c.user ? edit_user_gallery_path(id: c.id, user_id: c.user.id) : user_gallery_path(id: c.id, user_id: c.user.id), class:"btn btn-block btn-sq btn-d" %>
                </div>
            </div>
            <% elsif b %>
            <div class="col-sm-3">
                <%= link_to  (image_tag "placeholder-image-sq.png", class: "img-responsive"), new_user_gallery_path(:user) %>
            <div class="text-center">
                <%= link_to"New photo", new_user_gallery_path(:user), class:"btn btn-block btn-sq btn-d" %>
            </div>    
            </div>
        <% end %>
        <% if d %>
            <div class="col-sm-3">
                <a href="#" data-lightbox="<%= d.photo.url %>" data-caption="<%= d.description %>" data-gallery-id="gallery-1"><img src="<%= d.photo.medium.url %>" class="img-responsive" /></a>
                <div class="text-center">
                    <%= link_to d.title, current_user == d.user ? edit_user_gallery_path(id: d.id, user_id: d.user.id) : user_gallery_path(id: d.id, user_id: d.user.id), class:"btn btn-block btn-sq btn-d" %>
                </div>
            </div>
        <% elsif c %>
        <div class="col-sm-3">
            <%= link_to  (image_tag "placeholder-image-sq.png", class: "img-responsive"), new_user_gallery_path(:user) %>
            <div class="text-center">
                <%= link_to "New photo", new_user_gallery_path(:user), class:"btn btn-block btn-sq btn-d" %>
            </div>
        </div>
        <% end %>
    </div>
    <% end  %>
    <% if galleries.count % 4 == 0 %>
    <div class="row voffset">
        <div class="col-sm-3">
            <%= link_to  (image_tag "placeholder-image-sq.png", class: "img-responsive"), new_user_gallery_path(:user) %>
            <div class="text-center">
                <%= link_to "New photo", new_user_gallery_path(:user), class:"btn btn-block btn-sq btn-d" %>
            </div>
        </div>
    </div>
<% end %>
<style>
    .col-sm-3 > .btn{
        border-radius: 0;
    }
    .col-sm-3 > div.text-center{
        background-color: #47454b;
    }
    .col-sm-3 > .btn{
        transition: 0.5s;
    }
    .col-sm-3:hover .btn{
        color: #cac5c0 !important;
    }
</style>
